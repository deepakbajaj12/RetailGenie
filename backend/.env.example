# RetailGenie Backend - Example Environment Variables
# Copy this file to `.env` and fill in the values as needed.

# --- Core Configuration ---
SECRET_KEY=change-me-in-production
JWT_SECRET_KEY=change-me-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Server
HOST=0.0.0.0
PORT=5000

# --- Firebase Configuration ---
FIREBASE_CREDENTIALS_PATH=
FIREBASE_PROJECT_ID=

# --- Email Configuration ---
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=
SENDER_PASSWORD=
ADMIN_EMAIL=admin@retailgenie.local

# --- AI / OpenAI ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
EMBEDDINGS_MODEL=text-embedding-3-small
VECTOR_STORE=sqlite
VECTOR_DB_PATH=backend/data/embeddings_index.sqlite

# --- Optional Configuration ---
CORS_ORIGINS=http://localhost:3000
LOG_LEVEL=INFO
UPLOAD_FOLDER=uploads
PDF_OUTPUT_DIR=reports
REDIS_URL=redis://localhost:6379/0

# --- Security & Cookies ---
SESSION_COOKIE_SECURE=False

# --- Rate Limiting ---
# If not using Redis in development, defaults to in-memory
# RATELIMIT_STORAGE_URL=memory://

# Notes:
# - Keep `.env` out of version control.
# - For production, set `FLASK_ENV=production` and `SESSION_COOKIE_SECURE=True`.
# - Provide a real `SECRET_KEY` and `JWT_SECRET_KEY` in production.
